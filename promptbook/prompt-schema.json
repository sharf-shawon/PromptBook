{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "AI Prompt Schema",
    "description": "Schema for validating .prompt files",
    "required": ["author", "name", "description", "variables", "prompt"],
    "definitions": {
        "variable_list": {
            "type": "array",
            "description": "List of variables.",
            "items": {
                "type": "string",
                "pattern": "^[a-zA-Z0-9_-]+=([a-zA-Z0-9_-]+|\"[^\"]*\"|'[^']*'|true|false|\\d+)$"
            }
        },
        "prepost_prompt": {
            "oneOf": [
                {
                    "type": "string",
                    "description": "Single reference to another prompt.",
                    "pattern": "^[a-zA-Z0-9_-]+/[a-zA-Z0-9_-]+/[a-zA-Z0-9_-]+$"
                },
                {
                    "type": "array",
                    "description": "Multiple references to pre/post-prompts with variables.",
                    "items": {
                        "type": "object",
                        "properties": {
                            "prompt": {
                                "type": "string",
                                "description": "Reference to a pre/post-prompt.",
                                "pattern": "^[a-zA-Z0-9_-]+/[a-zA-Z0-9_-]+/[a-zA-Z0-9_-]+$"
                            },
                            "variables": { "$ref": "#/definitions/variable_list" }
                        },
                        "required": ["prompt"]
                    }
                }
            ]
        }
    },
    "properties": {
        "author": {
            "type": "string",
            "description": "The name of the prompt author."
        },
        "name": {
            "type": "string",
            "description": "The name of the prompt."
        },
        "description": {
            "type": "string",
            "description": "A short description of the prompt."
        },
        "variables": { "$ref": "#/definitions/variable_list" },
        "prompt": {
            "type": "array",
            "items": {
                "type": "string",
                "description": "The actual prompt text."
            }
        },
        "pre-prompt": { "$ref": "#/definitions/prepost_prompt" },
        "post-prompt": { "$ref": "#/definitions/prepost_prompt" },
        "examples": {
            "type": "array",
            "description": "Example inputs and outputs for the prompt.",
            "items": {
                "type": "object",
                "properties": {
                    "input": {
                        "type": "object",
                        "description": "Input variables for the prompt."
                    },
                    "output": {
                        "type": "string",
                        "description": "Output generated by the prompt."
                    }
                },
                "required": ["input", "output"]
            }
        },
        "tags": {
            "type": "array",
            "description": "A list of tags for categorization.",
            "items": {
                "type": "string"
            }
        }
    },
    "additionalProperties": false
}
